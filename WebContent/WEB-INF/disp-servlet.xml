<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="it.soft.*" />

	<!-- Message error bind -->
	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="/WEB-INF/error-messages" />
	</bean>
	<!-- END Message error bind -->
	<!-- BEGIN MAP DATASOURCE -->
	<bean id="myDataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url"
			value="jdbc:mysql://localhost:3306/db_condoni_guidonia" />
		<property name="username" value="root" />
		<property name="password" value="" />
	</bean>
	<!-- END MAP DATASOURCE -->


	<!-- BEGIN MAP HIBERNATE -->
	<bean id="mySessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="myDataSource" />
		<property name="packagesToScan">
			<list>
				<value>it.soft.domain</value>
			</list>
		</property>
		<!-- BEGIN MAP DOMAIN con ANNOTATION <property name="annotatedClasses"> 
			<list> <value>it.soft.domain.Utenti</value> <value>it.soft.domain.Comune</value> 
			<value>it.soft.domain.Datiabuso</value> <value>it.soft.domain.Datipratica</value> 
			<value>it.soft.domain.LeggiCondono</value> <value>it.soft.domain.Richiedente</value> 
			<value>it.soft.domain.RiduzioneReddito</value> <value>it.soft.domain.TipoEsenzioni</value> 
			<value>it.soft.domain.TipologiaAbuso</value> <value>it.soft.domain.TipologiaDestinazioneUso</value> 
			<value>it.soft.domain.TipologiaRiduzioneReddito</value> <value>it.soft.domain.TipoOpera</value> 
			<value>it.soft.domain.TipoRiduzione</value> <value>it.soft.domain.SoggettiAbuso</value> 
			<value>it.soft.domain.TipologiaDocumento</value> <value>it.soft.domain.DocumentiAbuso</value> 
			<value>it.soft.domain.DatiFabbricati</value> <value>it.soft.domain.DatiLocalizzazione</value> 
			<value>it.soft.domain.DatiTerreni</value> <value>it.soft.domain.RelSoggettoAbuso</value> 
			<value>it.soft.domain.DatiAlloggio</value> <value>it.soft.domain.EpocaAbuso</value> 
			<value>it.soft.domain.TipologiaAlloggio</value> <value>it.soft.domain.CaratteristicheSpeciali</value> 
			<value>it.soft.domain.DatiVersamenti</value> </list> </property> -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.current_session_context_class">thread
				</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
				<prop key="org.hibernate.cacheable">false</prop>
			</props>
		</property>
	</bean>
	<!-- END MAP HIBERNATE -->


	<!-- BEGIN MAP DAO -->
	<bean id="utenteHome" class="it.soft.dao.UtentiHome">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	<bean id="comuniHome" class="it.soft.dao.ComuniHome">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	<bean id="leggiCondonoHome" class="it.soft.dao.LeggiCondonoHome">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	<bean id="datiPraticaHome" class="it.soft.dao.DatiPraticaHome">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	<bean id="datiAbusoHome" class="it.soft.dao.DatiAbusoHome">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	<bean id="destinazioneUsoHome" class="it.soft.dao.DestinazioneUsoHome">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
	<bean id="epocaAbusoHome" class="it.soft.dao.EpocaAbusoHome">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
